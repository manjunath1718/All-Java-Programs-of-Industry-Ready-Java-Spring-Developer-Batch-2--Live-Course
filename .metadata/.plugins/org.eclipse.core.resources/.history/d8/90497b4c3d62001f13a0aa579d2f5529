package com.telusko.service;

import org.springframework.http.ResponseEntity;
import org.springframework.web.client.RestTemplate;

import com.telusko.model.Passenger;
import com.telusko.model.Ticket;

public class TicketBookingService implements ITicketBookingService {

	private String BOOK_TICKET=
			"http://localhost:8484/TicketBookingAPI/api/book-ticket/getTicketNumber";

	@Override
	public Ticket registerPassenger(Passenger passenger) {
		
		RestTemplate restTemplate=new RestTemplate();
		ResponseEntity<Ticket> response = restTemplate.postForEntity(BOOK_TICKET, passenger, Ticket.class);
		return response.getBody();
	}

	@Override
	public Ticket fetchPassenger(Integer ticketNumber) {
		
		return null;
	}

}
