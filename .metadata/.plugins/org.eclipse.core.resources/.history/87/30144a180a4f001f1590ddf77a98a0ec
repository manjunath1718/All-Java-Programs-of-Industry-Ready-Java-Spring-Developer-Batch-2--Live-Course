package com.telusko.controller;

import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
public class DemoController {

	@GetMapping("/info1/{name}")
	public String getInfo1(String name,Map<String,Object> map) {
		
		map.put("name","Hi "+name+" I hope you're fine and this is Path Param ex");
		
		return "index";
	}
	
	@GetMapping("/info1/{name}/{course}")
	public String getInfo2(String name,String course,Map<String,Object> map) {
		
		map.put("name","Hi "+name+" I hope you're enjoying learning "+course);
		
		return "index";
	}
	
	
}
